<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarActivity">

    <ImageView
        android:id="@+id/arrow_back_calendar_BTN"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="321dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_arrow_forward_24">
    </ImageView>



    <CalendarView
        android:id="@+id/calendarView"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/availableAppointments_TXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "תורים פנויים"
        android:layout_below="@+id/calendarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        >
    </TextView>

    <GridLayout
        android:id="@+id/gridLayout_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/availableAppointments_TXT"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        >
    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_level_calender_BTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button_v2"
        android:text="קבענו"
        android:textColor="@color/white"
        android:textStyle="bold">
    </androidx.appcompat.widget.AppCompatButton>


</RelativeLayout>